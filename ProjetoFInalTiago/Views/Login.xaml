<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjetoFInalTiago.Views.Login">
    <ContentPage.Content>
        <VerticalStackLayout>
            <Label Text="Usuário"></Label>
            <Entry Placeholder="Seu usuário" Text="{Binding Usuario.Nome}"/>
            
            <Label Text="Senha"></Label>
            <Entry IsPassword="True" Text="{Binding Usuario.Senha}"/>

            <Button Command="{Binding TryLoginCommand}">Fazer Login</Button>
        </VerticalStackLayout>
    </ContentPage.Content>
</ContentPage>